@model ICollection<StockDTO>
@{
    ViewData["Title"] = "Estoque";
}

<h2>Estoque Atual</h2>

<a asp-controller="Stocks" asp-action="Create" class="btn btn-primary mb-3">+ Novo Item</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Descrição</th>
            <th>Quantidade</th>
            <th>Valor unitário</th>
            <th>Valor total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (StockDTO item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Description</td>
                <td>@item.Quantity</td>
                <td>@item.Cost</td>
                <td>@item.Total</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-controller="Stock" asp-action="Details">Detalhes</a>
                    <a class="btn btn-sm btn-warning" asp-controller="Stock" asp-action="Edit">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-controller="Stock" asp-action="Delete">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
