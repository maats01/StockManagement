@model StockUpdateDTO

@{
    ViewData["Title"] = "Atualizando item";
}

<h2>Atualizando item</h2>

<form asp-action="Edit" method="post">
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Descrição</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MeasureUnit" class="form-label">Unidade de Medida</label>
        <input asp-for="MeasureUnit" class="form-control" placeholder="Ex: kg, un, l" />
        <span asp-validation-for="MeasureUnit" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MinimumStock" class="form-label">Estoque Mínimo</label>
        <input asp-for="MinimumStock" class="form-control" type="number" />
        <span asp-validation-for="MinimumStock" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MaximumStock" class="form-label">Estoque Máximo</label>
        <input asp-for="MaximumStock" class="form-control" type="number" />
        <span asp-validation-for="MaximumStock" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Quantidade Atual</label>
        <input asp-for="Quantity" class="form-control" type="number" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Cost" class="form-label">Valor Unitário (R$)</label>
        <input asp-for="Cost" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>