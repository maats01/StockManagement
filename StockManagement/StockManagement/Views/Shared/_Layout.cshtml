<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Sistema de Estoque</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            min-height: 100vh;
            display: flex;
            margin: 0;
        }

        .sidebar {
            width: 250px;
            background-color: #212529;
            color: white;
            display: flex;
            flex-direction: column;
            padding-top: 20px;
        }

            .sidebar h4 {
                text-align: center;
                color: #f8f9fa;
                margin-bottom: 1rem;
                border-bottom: 1px solid #495057;
                padding-bottom: 10px;
            }

        .sidebar-section {
            padding: 0 15px;
            margin-bottom: 1rem;
        }

        .sidebar-section-title {
            font-size: 0.85rem;
            color: #adb5bd;
            text-transform: uppercase;
            margin-bottom: 5px;
            padding-left: 10px;
        }

        .sidebar a {
            color: #ced4da;
            padding: 10px 15px;
            display: block;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.2s ease-in-out;
        }

            .sidebar a:hover,
            .sidebar a.active {
                background-color: #495057;
                color: white;
            }

        .content {
            flex: 1;
            padding: 20px;
            background-color: #f8f9fa;
        }

        .user-info {
            padding: 10px 20px;
            font-size: 0.85rem;
            background-color: #343a40;
            margin-top: auto;
            color: #adb5bd;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h4>Sistema de Estoque</h4>

        <div class="sidebar-section">
            <div class="sidebar-section-title">Gerenciamento</div>
            <a asp-controller="Stocks" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Stocks" ? "active" : "")">Estoque</a>
            <a asp-controller="Persons" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Persons" ? "active" : "")">Pessoas</a>
            <a asp-controller="Vehicles" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Vehicles" ? "active" : "")">Veículos</a>
        </div>

        <div class="sidebar-section">
            <div class="sidebar-section-title">Operações</div>
            <a asp-controller="ServiceOrders" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "ServiceOrders" ? "active" : "")">Ordens de Serviço</a>
            <a asp-controller="BuyOrders" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "BuyOrders" ? "active" : "")">Ordens de Compra</a>
        </div>

        <div class="user-info">
            Usuário logado
        </div>
    </div>

    <!-- Conteúdo principal -->
    <div class="content">
        <main class="container-fluid">
            @RenderBody()
        </main>
        <footer class="text-center mt-4">
            <small>&copy; @DateTime.Now.Year - Sistema de Estoque</small>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
